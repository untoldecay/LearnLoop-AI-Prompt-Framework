{
  "name": "world-development-helper",
  "version": "1.0.0",
  "description": "A desktop application for world-building creators with AI-powered content analysis and markdown editing",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:3001 && npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:mac": "npm run build && electron-builder --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": {
    "name": "World Development Helper",
    "email": "contact@worlddevhelper.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^8.2.0",
    "electron": "^25.3.1",
    "electron-builder": "^24.6.3",
    "vite": "^4.4.5",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.2",
    "axios": "^1.4.0",
    "electron-store": "^8.1.0",
    "chokidar": "^3.5.3",
    "gray-matter": "^4.0.3",
    "marked": "^5.1.1",
    "react-markdown": "^8.0.7",
    "react-syntax-highlighter": "^15.5.0",
    "uuid": "^9.0.0",
    "@monaco-editor/react": "^4.5.1",
    "react-split": "^2.0.14",
    "lucide-react": "^0.263.1",
    "clsx": "^2.0.0"
  },
  "build": {
    "appId": "com.worlddevhelper.app",
    "productName": "World Development Helper",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "src/main/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "keywords": [
    "electron",
    "world-building",
    "markdown",
    "ai-assistant",
    "creative-writing",
    "desktop-app"
  ]
}